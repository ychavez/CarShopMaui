             x:Class="CarShopMaui.Views.AddCar"
              xmlns:view="clr-namespace:CarShopMaui.Views"
             Title="AddCar">
    <VerticalStackLayout>
        <Frame CornerRadius="100"  HeightRequest="200" 
               WidthRequest="200">
            <Image 
                x:Name="imgCar"  Source="dotnet_bot"/>
        </Frame>

        <Entry x:Name="entryModelo" Placeholder="Modelo"/>
        <Entry x:Name="entryMarca"  Placeholder="Marca"/>
        <Entry x:Name="entryAnio" Placeholder="AÃ±o" Keyboard="Numeric"/>
        <Entry x:Name="entryDescripcion" Placeholder="Descripcion"/>
        <Entry x:Name="entryPrecio" Placeholder="Precio" Keyboard="Numeric"/>
        <Button x:Name="btnAceptar" Text="Aceptar" Clicked="btnAceptar_Clicked"/>
    </VerticalStackLayout>
</ContentPage>